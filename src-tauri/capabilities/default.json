{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "core:app:allow-set-app-theme",
    {
      "identifier": "opener:allow-open-path",
      "allow": [
        {
          "path": "$RESOURCE/**"
        },
        {
          "path": "$RESOURCE/*"
        },
        {
          "path": "$RESOURCE"
        },
        {
          "path": "*/**"
        },
        {
          "path": "*/*"
        },
        {
          "path": "*"
        }
      ]
    },
    {
      "identifier": "opener:allow-open-url",
      "allow": [
        {
          "url": "*"
        }
      ]
    },
    "dialog:default",
    "store:default",
    "clipboard-manager:default",
    "os:default"
  ]
}
